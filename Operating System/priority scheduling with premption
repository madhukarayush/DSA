#include<iostream>

 using namespace std;
int main()
{
    int a[10],b[10],x[10];
    int waiting[10],turnaround[10],p[10];
    int i,j,smallest,count=0,time,n;
    double avg=0,tt=0,end;

   cout<<"Enter the number of Processes: ";
    cin>>n;
    for(i=0;i<n;i++)
    {
      cout<<"Enter arrival time of process "<<i+1<<" : ";
      cin>>a[i];
    }
    for(i=0;i<n;i++)
    {
      cout<<"Enter burst time of process "<<i+1<<" : ";
      cin>>b[i];
    }
    for(i=0;i<n;i++)
    {
      cout<<"Enter priority of process "<<i+1<<" : ";
      cin>>p[i];
    }
    for(i=0; i<n; i++)
        x[i]=b[i];
    for(time=0; count!=n; time++)
    {
        smallest=9;
        for(i=0; i<n; i++)
        {
            if(a[i]<=time && p[i]>p[smallest] && b[i]>0 )
                smallest=i;
        }
        b[smallest]--;

        if(b[smallest]==0)
        {
            count++;
            end=time+1;
            waiting[smallest] = end - a[smallest] - x[smallest];
            turnaround[smallest] = end - a[smallest];
        }
    }
     cout<<"Process"<<"\t"<< "burst-time"<<"\t"<<"arrival-time" <<"\t"<<"waiting-time" <<"\t"<<"turnaround-time"<<"\t"<<"Priority"<<endl;
    for(i=0; i<n; i++)
    {
         cout<<"p"<<i+1<<"\t\t"<<x[i]<<"\t\t"<<a[i]<<"\t\t"<<waiting[i]<<"\t\t"<<turnaround[i]<<"\t"<<p[i]<<endl;
        avg = avg + waiting[i];
        tt = tt + turnaround[i];
    }
   cout<<"Average waiting time ="<<avg/n;
    cout<<"  Average Turnaround time ="<<tt/n<<endl;
}
